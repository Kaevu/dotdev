---
import MoreMenu from "./MoreMenu.astro";
const path = Astro.url.pathname;
---
<header class="mb-16">
  <h1 class="text-3xl font-light mb-6 tracking-tight">Kaevu</h1>

  <nav class="flex gap-6 text-sm flex-wrap items-start">
    <a href="/" class={path === "/" ? "text-neutral-100 font-medium" : "text-neutral-500 hover:text-neutral-300"}>Home</a>
    <a href="/projects" class={path === "/projects" ? "text-neutral-100 font-medium" : "text-neutral-500 hover:text-neutral-300"}>Projects</a>
    <a href="/blog" class={path === "/blog" ? "text-neutral-100 font-medium" : "text-neutral-500 hover:text-neutral-300"}>Blog</a>
    <a href="/chess" class={path === "/chess" ? "text-neutral-100 font-medium" : "text-neutral-500 hover:text-neutral-300"}>Chess</a>

    <MoreMenu />
  </nav>
</header>

