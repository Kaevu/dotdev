---
import type { CollectionEntry } from 'astro:content';
import BaseLayout from './BaseLayout.astro';

type Props = CollectionEntry<'blog'>['data'];

const { title, description, pubDate, updatedDate } = Astro.props;
---

<BaseLayout>
  <article class="max-w-2xl">
    <!-- Header -->
    <header class="mb-12">
      <div class="text-xs text-neutral-500 mb-4">
        <FormattedDate date={pubDate} />
        {updatedDate && (
          <span class="italic">
            Â· Updated <FormattedDate date={updatedDate} />
          </span>
        )}
      </div>
      <h1 class="text-2xl font-light mb-4 tracking-tight">{title}</h1>
      {description && (
        <p class="text-neutral-400 text-sm">{description}</p>
      )}
      <hr class="border-neutral-800 mt-6" />
    </header>

    <!-- Content -->
    <div class="prose prose-invert prose-neutral max-w-none">
      <slot />
    </div>
  </article>
</BaseLayout>
